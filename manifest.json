{
  "name": "Content Canva Extension",
  "version": "1.0.2",
  "description": "Extensions points for designers creating templates",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.canva.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "extras.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Canva crop"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "get": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+Shift+K"
      },
      "description": "Copy crop data"
    },
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Toggle crop feature"
    }
  }
}
